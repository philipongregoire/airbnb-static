---
title: Airbnb flat
---
<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>
<!-- Inject flat data in template -->
<div class="banner banner-owner">
</div>

<div class="container text-center owner_book">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="owner-description">
        <div>
          <%= image_tag flat.owner_picture, class: "avatar-xlarge" %>
          <p> <%= flat.owner_name %> </p>
        </div>
        <div>
          <h4> <%= flat.summary %> </h4>
          <p> <%= flat.city %> </p>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="text-center" id="newsletter">
        <form action="#">
          <h3>Book this flat</h3>
            <div class="form-group">
              <div class="row">
                <div class="col-xs-6">
                  <input type="text" class="form-control" id="email" placeholder="Checkin">
                </div>
                <div class="col-xs-6">
                  <input type="text" class="form-control" id="password" placeholder="Checkout">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <select class="form-control">
                  <option value="1">1 guest</option>
                  <option value="2">2 guests</option>
                  <option value="3">3 guests</option>
                </select>
              </div>
            </div>
                <input type="submit" value="Book it" class="btn btn-primary" style="width: 100%">
          </form>
      </div>
    </div>
  </div>
</div>


<div id="flat_description">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h4>About this flat</h4>
        <p>This one bedroom studio lodges 2 people (there's 1 double bed) it is located in the city center, in a calm traditional residential area near city´s main Avenue - 3 minutes walk from Sacré Coeur.</p>
      </div>
    </div>
    <hr>
    <div id="flat_data">
      <div class="row">
        <div class="col-xs-12 col-sm-2">
          <p>The Space</p>
        </div>
        <div class="col-xs-12 col-sm-4">
          <p> bedroom : <strong><%= flat.bedroom %></strong> </p>
          <p> roomates : <strong><%= flat.roomates %></strong></p>
        </div>
        <div class="col-xs-12 col-sm-4">
          <p> bathroom : <strong><%= flat.bathroom %></strong></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-xs-12 col-sm-2">
          <p>Amenities</p>
        </div>
        <div class="col-xs-12 col-sm-4">
          <p> wifi : <strong><%= flat.wifi %></strong> </p>
          <p> animals : <strong><%= flat.animals %></strong></p>
        </div>
        <div class="col-xs-12 col-sm-4">
          <p> party : <strong><%= flat.party %></strong></p>
        </div>
      </div>
    </div>
  </div>
</div>

